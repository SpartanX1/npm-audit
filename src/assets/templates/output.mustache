<style>
  .badge {
    display: inline-block;
    padding: 0.25em 0.4em;
    font-size: small;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: 0.25rem;
  }

  .badge:empty {
    display: none;
  }

  .btn .badge {
    position: relative;
    top: -1px;
  }

  .badge-pill {
    padding-right: 0.6em;
    padding-left: 0.6em;
    border-radius: 10rem;
  }

  .badge-high {
    color: #fff;
    background-color: rgb(187, 69, 26);
  }

  .badge-warning {
    color: black;
    background-color: rgb(230, 226, 40);
  }

  .badge-action {
    color: black;
    background-color: rgb(231, 231, 231);
  }

  .badge-module {
    color: rgb(231, 231, 231);
    background-color: rgb(66, 65, 64);
    margin-bottom: 5px;
  }

  .badge-high[href]:hover,
  .badge-high[href]:focus {
    color: #fff;
    text-decoration: none;
    background-color: #0062cc;
  }

  .badge-critical {
    color: #fff;
    background-color: rgb(187, 69, 26);
  }

  .badge-critical[href]:hover,
  .badge-critical[href]:focus {
    color: #fff;
    text-decoration: none;
    background-color: #0062cc;
  }

  .badge-secondary {
    color: #fff;
    background-color: #6c757d;
    font-size: small;
  }

  .badge-secondary[href]:hover,
  .badge-secondary[href]:focus {
    color: #fff;
    text-decoration: none;
    background-color: #3c3e41;
  }

  .badge-low {
    color: #fff;
    background-color: #28a745;
  }

  .badge-low[href]:hover,
  .badge-low[href]:focus {
    color: #fff;
    text-decoration: none;
    background-color: green;
  }

  .badge-info {
    color: #fff;
    background-color: rgb(2, 138, 131);
  }

  .badge-info[href]:hover,
  .badge-info[href]:focus {
    color: #fff;
    text-decoration: none;
    background-color: #0F80C1;
  }

  .badge-moderate {
    color: #fff;
    background-color: rgb(192, 138, 3);
  }

  .badge-moderate[href]:hover,
  .badge-moderate[href]:focus {
    color: #fff;
    text-decoration: none;
    background-color: #D7B024;
  }

  .badge-critical {
    color: #fff;
    background-color: crimson;
  }

  .badge-danger {
    color: #fff;
    background-color: #F48142;
  }

  .badge-danger[href]:hover,
  .badge-danger[href]:focus {
    color: #fff;
    text-decoration: none;
    background-color: #bd2130;
  }

  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 10px;
  }

  td,
  th {
    border: 1px solid #696868;
    text-align: left;
    padding: 8px;
  }

  th {
    border: 0px;
    background-color: darkslategray;
    padding: 5px 10px 5px 10px;
  }

  .status {
    background-clip: border-box;
    border: 1px solid rgba(0, 0, 0, 0.125);
  }

  .status:first-child {
    background-color: darkslategray;
    padding: 2px;
    background-clip: border-box;
    border-radius: 0.25rem 0 0 0.25rem;
    border-right: none;
    padding: 2px 6px 1px 4px;
  }

  .status:last-child {
    padding: 2px 6px 3px 4px;
    border-radius: 0 0.25rem 0.25rem 0;
    border-right: none;
  }

  .header {
    font-size: large;
    margin-left: 15px;
    padding-bottom: 5px;
    align-self: center;
  }
</style>

